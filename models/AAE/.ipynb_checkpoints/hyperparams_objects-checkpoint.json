{
    "experiment_name": "objects",
    "results_root": "results",
    "clean_results_dir": false,
    
    "cuda": true,
    "gpu": 0,
    "reconstruction_loss": "chamfer",
    "metrics": [
    ],

    "dataset": "shapenet",
    "data_dir": "shape_net_core_uniform_samples_2048",
    "classes": [],
    "shuffle": true,
    "transforms": ["rotate"],
    "num_workers": 0,
    "n_points": 2048,

    "max_epochs": 2000,
    "batch_size": 50,
    "gp_lambda": 10,
    "reconstruction_coef": 0.05,
    "z_size": 2048,
    "distribution": "bernoulli",

    "p": 0.2,
    "z_beta_a": 0.01,
    "z_beta_b": 0.01,

    "normal_mu": 0.0,
    "normal_std": 0.2,

    "seed": 2018,
    "save_frequency": 50,
    "epsilon": 0.001,

    "arch": "aae",
    "model": {
        "D": {
            "dropout": 0.5,
            "use_bias": true,
            "relu_slope": 0.2
        },
        "G": {
            "use_bias": true,
            "relu_slope": 0.2
        },
        "E": {
            "use_bias": true,
            "relu_slope": 0.2
        }
    },
    "optimizer": {
        "D": {
            "type": "Adam",
            "hyperparams": {
                "lr": 0.0005,
                "weight_decay": 0,
                "betas": [0.9, 0.999],
                "amsgrad": false
            }
        },
        "EG": {
            "type": "Adam",
            "hyperparams": {
                "lr": 0.0005,
                "weight_decay": 0,
                "betas": [0.9, 0.999],
                "amsgrad": false
            }
        }
    }
}